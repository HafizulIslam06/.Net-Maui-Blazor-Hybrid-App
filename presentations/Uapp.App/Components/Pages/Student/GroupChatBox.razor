@page "/chatgroup"

@using Uapp.App.Components.Layout
@layout ProfileLayout

<!-- Top Nav -->
<div class="position-sticky top-0" style="z-index:1; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
    <div class="boundary">
        <div class="d-flex justify-content-between bg-fff py-3 pt-3">
            <div class="d-flex">
                <img src="/assets/images/icons/icon-arrowBack.svg" alt="Icon-arrowBack" />
                <img class="userIcon mx-3" src="assets/images/icons/icon-APP111924.svg" />
                <div class="font-22-600">APP111924</div>
            </div>
            <img src="/assets/images/icons/icon-moreOption.svg" alt="icon-moreOption" />
        </div>
    </div>
</div>

<!-- Body -->
<div class="bg-fafafb vh-100 d-flex flex-column">
    <div class="boundary flex-grow-1 d-flex flex-column">
        <div class="text-center text-secondary">06 February, 11:40 AM</div>
        <!-- Chat Body -->
        <div class="chat-body flex-grow-1 overflow-auto p-3">
            <!-- Example Messages -->
            <div class="d-flex">
                <div><img class="userIcon mx-2" src="assets/images/icons/icon-APP111924.svg" /></div>
                <div class="message message-received">Hi! How Are You?</div>
            </div>
            <div class="message message-sent">Hello!</div>            
            <!-- Add more messages here -->
        </div>
        <div class="checkbox-group">
            <div class="checkbox-item">
                <input type="checkbox" id="consultant" checked>
                <label for="consultant">Consultant</label>
                <input type="checkbox" id="admission-manager">
                <label for="admission-manager">Admission Manager</label>
            </div>
            <div class="checkbox-item">
                <input type="checkbox" id="admission-officer">
                <label for="admission-officer">Admission Officer</label>
            </div>
        </div>
    </div>
</div>

<!-- Text Writing Section -->
<div class="position-sticky bottom-0 text-writing-section d-flex align-items-center p-3 bg-fafafb">
    <div class="input-group">
        <input type="text" class="input-chat" placeholder="Type a message" style="border-radius: 12px;" />
        <div class="input-group-append">
            <i class="fa-solid fa-paperclip mx-1"></i>
            <i class="fa-solid fa-face-smile mx-1"></i>
        </div>
    </div>
    <img src="/assets/images/icons/icon-send.png" alt="Send Icon" class="icon-send ms-2" />
</div>  